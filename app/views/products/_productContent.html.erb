<div id="pageContent" class="starthide">
  <section class="content offset-top-0">
    <div class="container">
      <div class="row product-info-outer">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-8">
          <div class="row">
            <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 hidden-xs">
              <div class="product-main-image">
                <div class="product-main-image__item">
                 link hinh anh
                </div>
                <div class="product-main-image__zoom"></div>
              </div>
              <div id="demoform">
                <% if current_user.viewed? @product %>
                  <%= render "shared/demoform" %>
                <% else %>
                  <%= render "shared/demoform" %>
                <% end %>
              </div>
            </div>
            <div class="product-info col-sm-6 col-md-6 col-lg-6 col-xl-6">
              <div class="product-info__title">
                <h2><%= @product.name %></h2>
              </div>
              <div class="price-box product-info__price">
                <span class="price-box__new"><span class=money><%= @product.price_in %></span></span>
                <span class="price-box__old"><span class=money><%= @product.price_out %></span></span>
              </div>
              <!-- countdown_box -->
              <div class="divider divider--xs product-info__divider"></div>
              <form id="add-item-form" action="<%= carts_path(quanitily: 1, product_id: @product.id, user_id: current_user.id ) %>" data-method="post">
                <div class="divider divider--sm"></div>
                <div class="wrapper">
                  <div class="pull-left"><span class="qty-label"><%= t("product.str1") %></span> </div>
                  <div class="pull-left">
                    <input type="text" name="quantity" class="input--ys qty-input pull-left"
                    value=<%= @product.status %>> </div>
                  <div class="pull-left">
                    <a href="<%= carts_path(quanitily: 1, product_id: @product.id, user_id: current_user.id ) %>" class="btn btn--ys btn--xl addtocart-js" data-method="post">
                      <%= t("product.str2") %>
                    </a>
                  </div>
                </div>
                <script>
                  jQuery('.addtocart').click(function(e) {
                    e.preventDefault();
                    Shopify.addItemFromFormStart('add-item-form',
                      9097940428);
                  });
                </script>
              </form>

              <div class="fb-like" data-href="https://www.facebook.com/FAshopdanang/" data-width="" data-layout="standard" data-action="like" data-size="large" data-show-faces="true" data-share="true"></div>
              <div class="divider divider--xs product-info__divider"></div>
              <div id="ratingform">
                <% if current_user.rated? @product %>
                  <%= render "shared/rating" %>
                <% else %>
                  <%= render "shared/ratingform" %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="row content">
            <ul class="nav nav-tabs nav-tabs--ys1" role="tablist">
              <li class="active">
                <a href="#Tab1" role="tab" data-toggle="tab" class="text-uppercase"><%= t("product.str3") %></a>
              </li>
              <li>
                <a href="#Tab2" role="tab" data-toggle="tab" class="text-uppercase"><%= t("product.str4") %></a>
              </li>
            </ul>
            <div class="tab-content tab-content--ys">
              <div role="tabpanel" class="tab-pane active" id="Tab1">
                <p><%= @product.description_long %></p>
                <div class="divider divider--md"></div>
                <table class="table table-params">
                  <tbody>
                    <tr>
                      <td class="text-right"><span class="color"><%= t("product.str5") %></span> </td>
                      <td><%= @product.color %></td>
                    </tr>
                    <tr>
                      <td class="text-right"><span class="color"><%= t("product.str6") %></span> </td>
                      <td><%= @product.size %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div role="tabpanel" class="tab-pane " id="Tab2">
                <ul class="tags-list">

                  <li>
                    <a href="/collections/all/vintage">
                      <%= @small_category.small_category_name %>
                    </a>
                  </li>

                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="fb-comments" data-href="https://www.facebook.com/FAshopdanang/" data-width="100%" data-numposts="5">
        </div>
      </div>
    </div>
  </section>
  <%= javascript_include_tag "product" %>
  <!-- related products -->
  <!-- /related products -->
</div>
